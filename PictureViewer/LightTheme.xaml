<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PictureViewer">
    <Style x:Key="ListViewStyle" TargetType="ListView">
        <Setter Property="ListView.BorderBrush" Value="#FF6AF137" />
        <Setter Property="ListView.Foreground" Value="#FF042271" />
        <Setter Property="ListView.Background" Value="#FFD5F3C7" />
    </Style>
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#FFF7C8C8" />
    </Style>
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#FFDDDDDD" />
        <Setter Property="Foreground" Value="#FF000000" />
        <Setter Property="BorderBrush" Value="#FF6AF137" />
    </Style>
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#FFD5F3C7" />
        <Setter Property="Foreground" Value="#FF042271" />
        <Setter Property="BorderBrush" Value="#FF6AF137" />
    </Style>

</ResourceDictionary>