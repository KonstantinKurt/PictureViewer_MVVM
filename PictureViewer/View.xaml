<Window
    x:Class="PictureViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PictureViewer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid RenderTransformOrigin="0.231,-0.163">
        <ListView
            Width="500"
            Height="362"
            Margin="0,47,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Images}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width=" 170"
                        DisplayMemberBinding="{Binding Name}"
                        Header="Название файла" />

                    <GridViewColumn Width=" 200" Header="Изображение">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image
                                    MaxHeight="80"
                                    Source="{Binding Path_to_Pic}"
                                    Stretch="UniformToFill" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Width="130"
                        DisplayMemberBinding="{Binding Size}"
                        Header="Размер файла,КБ" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Width="75"
            Margin="574,47,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding Get_images}"
            Content="Button" />

    </Grid>
</Window>
